<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.dna.sdk.demo.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_exampleInJavaFragment"
            app:destination="@id/exampleInJavaFragment" />
        <action
            android:id="@+id/action_mainFragment_to_txnListFragment"
            app:destination="@id/txnListFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.dna.sdk.demo.ui.payment.auth.PaymentAuthFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/action_paymentFragment_to_paymentFormFragment"
            app:destination="@id/paymentFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFormFragment"
        android:name="com.dna.sdk.demo.ui.payment.form.PaymentFormFragment"
        android:label="PaymentFormFragment" >
        <argument
            android:name="token"
            app:argType="string" />
        <action
            android:id="@+id/action_paymentFormFragment_to_paymentWebFragment"
            app:destination="@id/paymentWebFragment" />
        <argument
            android:name="amount"
            app:argType="float" />
        <argument android:name="currency"
            app:argType="string" />
        <argument
            android:name="invoiceId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/paymentWebFragment"
        android:name="com.dna.sdk.demo.ui.payment.web.PaymentWebFragment"
        android:label="PaymentWebFragment" >
        <argument
            android:name="paymentData"
            app:argType="com.dna.sdk.dnapayments.models.network.payments.EnrollmentResponse" />
        <argument
            android:name="token"
            app:argType="string" />
        <action
            android:id="@+id/action_paymentWebFragment_to_paymentResultFragment"
            app:destination="@id/paymentResultFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.dna.sdk.demo.ui.details.DetailsFragment"
        android:label="DetailsFragment">
        <argument
            android:name="txnId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/paymentResultFragment"
        android:name="com.dna.sdk.demo.ui.payment.result.PaymentResultFragment"
        android:label="PaymentResultFragment" >
        <argument
            android:name="paymentResult"
            app:argType="com.dna.sdk.dnapayments.models.network.PaymentResult" />
        <action
            android:id="@+id/action_paymentResultFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/exampleInJavaFragment"
        android:name="com.dna.sdk.demo.ui.ExampleInJavaFragment"
        android:label="fragment_java"
        tools:layout="@layout/fragment_java" />
    <fragment
        android:id="@+id/txnListFragment"
        android:name="com.dna.sdk.demo.ui.details.txns.TxnListFragment"
        android:label="TxnListFragment">
        <action
            android:id="@+id/action_txnListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.dna.sdk.demo.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>